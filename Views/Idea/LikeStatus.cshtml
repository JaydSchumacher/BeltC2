@{
    ViewData["Title"] = "Like Status";
}

<div>
    @{
        if(@ViewBag.errors != null){
            foreach(var error in @ViewBag.errors){
                
                <p>@error</p>
                
            }
        }
    }
    
</div>
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

@{
    foreach(var idea in ViewBag.curidea)
    {
        <p>@idea.User.name says: @idea.description</p>
        <h3>People who liked this post</h3>
        
    }

    <table>
        <th>Alias</th>
        <th>Name</th>
        <tbody>
        @{
                foreach(var like in ViewBag.wholiked){
                    <tr>
                        <td>|  @like.User.alias  |</td>
                        <td>|  @like.User.name      |</td>
                    </tr>
                }
        }
        
    </tbody>
    </table>
    
}
